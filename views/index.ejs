<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login & Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body class="bg-[#1e1e2f] text-[#eee] font-sans flex justify-center items-center min-h-screen p-8">

  <div id="container"
       class="bg-[rgba(40,40,55,0.85)] px-4 py-6 sm:px-6 md:px-10 rounded-2xl w-full max-w-[1290px] min-h-[10px] shadow-2xl text-center">

    <h1 id="form-title" class="text-2xl sm:text-3xl font-semibold text-[#6a6aff] mb-10 sm:mb-20">LOGIN</h1>

    <!-- Login Form -->
    <form id="loginForm" action="/login" method="POST" autocomplete="off" class="space-y-4 text-left">
      <div class="relative">
        <i class="ri-user-line absolute left-3 top-1/2 -translate-y-1/2 text-[#bbb] text-lg"></i>
        <input type="text" name="username" placeholder="Username" required
               class="w-full bg-white/10 text-white placeholder-[#bbb] rounded-lg p-9 pl-10 text-sm sm:text-base focus:outline-none" />
      </div>
      <div class="relative">
        <i class="ri-lock-line absolute left-3 top-1/2 -translate-y-1/2 text-[#bbb] text-lg"></i>
        <input type="password" name="password" placeholder="Password" required
               class="w-full bg-white/10 text-white placeholder-[#bbb] rounded-lg p-9 pl-10 text-sm sm:text-base focus:outline-none" />
      </div>
      <button type="submit"
              class="w-full bg-gradient-to-br from-[#6a6aff] to-[#4545ff] hover:from-[#7b7bff] hover:to-[#5656ff] text-white text-base sm:text-1xl font-semibold rounded-xl py-3 transition">
        MASUK
      </button>
    </form>

    <!-- Register Form -->
    <form id="registerForm" action="/register" method="POST" autocomplete="off"
          class="space-y-4 text-left hidden mt-25">
      <div class="relative mt-4 mb-1">
        <i class="ri-user-line absolute left-3 top-1/2 -translate-y-1/2 text-[#bbb] text-lg"></i>
        <input type="text" name="username" placeholder="Username" required
               class="w-full bg-white/10 text-white placeholder-[#bbb] rounded-lg p-9 pl-10 text-sm sm:text-base focus:outline-none" />
      </div>
      <div class="relative">
        <i class="ri-lock-line absolute left-3 top-1/2 -translate-y-1/2 text-[#bbb] text-lg"></i>
        <input type="password" name="password" placeholder="Password" required
               class="w-full bg-white/10 text-white placeholder-[#bbb] rounded-lg p-9 pl-10 text-sm sm:text-base focus:outline-none" />
      </div>
      <div class="relative">
        <i class="ri-lock-password-line absolute left-3 top-1/2 -translate-y-1/2 text-[#bbb] text-lg"></i>
        <input type="password" name="confirmPassword" placeholder="Confirm Password" required
               class="w-full bg-white/10 text-white placeholder-[#bbb] rounded-lg p-9 pl-10 text-sm sm:text-base focus:outline-none" />
      </div>
      <button type="submit"
              class="w-full bg-gradient-to-br from-[#6a6aff] to-[#4545ff] hover:from-[#7b7bff] hover:to-[#5656ff] text-white text-base sm:text-1xl font-semibold rounded-xl py-3 transition">
        DAFTAR
      </button>
    </form>

    <!-- Switch Form -->
    <div id="switchText" class="text-[#a8a8ff] text-sm mt-4 cursor-pointer select-none">
      Belum punya akun? <span id="switchBtn" class="underline">Daftar</span>
    </div>

    <!-- Message -->
    <div class="text-[#f88] font-semibold min-h-[20px] mt-80">
      <%= message ? message : '' %>
    </div>
  </div>

  <script>
    const loginForm = document.getElementById('loginForm');
    const registerForm = document.getElementById('registerForm');
    const switchBtn = document.getElementById('switchBtn');
    const formTitle = document.getElementById('form-title');
    const switchText = document.getElementById('switchText');

    let isLogin = true;

    switchBtn.addEventListener('click', () => {
      if (isLogin) {
        loginForm.classList.add('hidden');
        registerForm.classList.remove('hidden');
        formTitle.textContent = 'DAFTAR';
        switchText.firstChild.textContent = 'Sudah punya akun? ';
        switchBtn.textContent = 'Masuk';
      } else {
        registerForm.classList.add('hidden');
        loginForm.classList.remove('hidden');
        formTitle.textContent = 'LOGIN';
        switchText.firstChild.textContent = 'Belum punya akun? ';
        switchBtn.textContent = 'Daftar';
      }
      isLogin = !isLogin;
    });
  </script>

</body>
</html>
